#!/bin/sh /etc/rc.common
# Copyright (c) 2011-2015 OpenWrt.org

START=99

start() {
	if [ ! -f "/var/run/where_cheaper_bot.pid" ]; then
		echo "1" > /var/run/where_cheaper_bot.pid
		python3 /usr/lib/telebot/where_cheaper_bot.py >/dev/null 2>&1 &
	fi
	return 0
}

stop() {
	rm -f /var/run/where_cheaper_bot.pid
	kill $(pgrep -f telebot/where_cheaper_bot.py) >/dev/null 2>&1
}

restart(){
	stop
	sleep 1
	start
}

boot() {
	(sleep 5 && start >/dev/null 2>&1) &
	return 0
}
